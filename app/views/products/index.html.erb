<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row text-center">
    <h1>Products</h1>
  </div>
  <div class="row mt-5 justify-content-center">
    <div class="col-md">
      <div class="row">
        <div class="col-12 text-center mb-5">
          <%= link_to 'New Product', new_product_path,
                                              class: 'btn btn-success text-white' %>
        </div>
      </div>
    </div>
    <div class="col-9">
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-md d-flex mb-3 justify-content-center">
            <div class="card" style="width: 18rem;">
              <%= image_tag 'card-img.jpg', class: 'card-img-top', alt: 'image' %>
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description.truncate(125) %></p>
                <%= link_to product.price, product,
                                              class: 'btn btn-primary text-white' %>
                <%= link_to 'Destroy', product, class: 'link-danger bg-white mx-3',
                                                method: :delete,
                                                data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
